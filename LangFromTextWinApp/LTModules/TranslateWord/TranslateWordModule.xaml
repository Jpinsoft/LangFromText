<UserControl
    x:Class="LangFromTextWinApp.LTModules.TranslateWord.TranslateWordModule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:LangFromTextWinApp.Controls"
    xmlns:View="clr-namespace:LangFromTextWinApp.View"
    xmlns:ViewPopup="clr-namespace:LangFromTextWinApp.View.Popup"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fontawesome="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:LangFromTextWinApp.LTModules.TranslateWord"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <Grid x:Name="MainPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="10"
            HorizontalContentAlignment="Right"
            BorderThickness="0,0,0,5"
            Content="{Binding ConverterParameter=T202, Converter={StaticResource ResourceConverter}}"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#FF072C2C">
            <Label.BorderBrush>
                <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                    <GradientStop Offset="0" Color="#FF4E9595" />
                    <GradientStop Offset="1" Color="#FFD7ECEC" />
                </LinearGradientBrush>
            </Label.BorderBrush>
        </Label>

        <Controls:ScorePanelUserControl
            x:Name="ScorePanel"
            Grid.Row="1"
            Grid.Column="0"
            Margin="10,0,0,0" />

        <DockPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,10,10,10"
            HorizontalAlignment="Right">
            <Label
                Margin="10,0"
                Content="Level"
                DockPanel.Dock="Left" />
            <TextBlock
                Margin="10,0"
                VerticalAlignment="Center"
                DockPanel.Dock="Right"
                FontWeight="SemiBold"
                Text="{Binding ElementName=SliderLevel, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                TextAlignment="Right" />

            <Slider
                x:Name="SliderLevel"
                Width="200"
                Margin="10,3,10,0"
                IsSnapToTickEnabled="True"
                Maximum="3"
                Minimum="1"
                TickPlacement="None"
                ValueChanged="SliderLevel_ValueChanged"
                Value="2" />
        </DockPanel>

        <StackPanel
            x:Name="wPanelMain"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            VerticalAlignment="Center">
            <Label
                x:Name="LblQuestion"
                Margin="5"
                HorizontalAlignment="Center"
                Content="Label"
                FontSize="24" />
            <DockPanel HorizontalAlignment="Center">
                <Label Margin="5">
                    <Hyperlink NavigateUri="jpinsoft.net" RequestNavigate="Hyperlink_RequestNavigate">
                        Google Translator
                    </Hyperlink>
                </Label>
                <Label Margin="5" HorizontalAlignment="Right">
                    <Hyperlink
                        NavigateUri="jpinsoft.net"
                        RequestNavigate="Hyperlink_RequestNavigate"
                        TargetName="AZET">
                        Azet Slovnik
                    </Hyperlink>
                </Label>
            </DockPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    x:Name="BtnSuccess"
                    Width="150"
                    Margin="10"
                    Click="BtnSuccess_Click">
                    <Button.Content>
                        <StackPanel Margin="5" Orientation="Horizontal">
                            <fontawesome:ImageAwesome
                                Height="36"
                                Foreground="#FF30A04A"
                                Icon="ThumbsUp" />
                            <Label VerticalAlignment="Center" Content="Rozumiem" />
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button
                    x:Name="BtnFail"
                    Width="150"
                    Margin="10"
                    Click="BtnFail_Click">
                    <Button.Content>
                        <StackPanel Margin="5" Orientation="Horizontal">
                            <fontawesome:ImageAwesome
                                Height="36"
                                Foreground="#FFDE603B"
                                Icon="ThumbsDown" />
                            <Label VerticalAlignment="Center" Content="Nerozumiem" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </StackPanel>

    </Grid>

</UserControl>
