<UserControl
    x:Class="LangFromTextWinApp.Controls.ScorePanelUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LangFromTextWinApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Label>
        <Label.Content>
            <Hyperlink
                x:Name="LinkScore"
                Click="LinkScore_Click"
                FontSize="20"
                FontStyle="Normal"
                FontWeight="Bold"
                Foreground="#FF4F95DA"
                TextDecorations="">
                SCORE -
                <TextBlock x:Name="TxbScoreToDay">TODAY</TextBlock>
                (Today)
                /
                <TextBlock x:Name="TxbScoreTotal">TOTAL</TextBlock>
                (Total)
            </Hyperlink>

        </Label.Content>
    </Label>
</UserControl>
