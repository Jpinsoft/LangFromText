<UserControl
    x:Class="LangFromTextWinApp.Controls.ProgressContentOverlayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LangFromTextWinApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#80CBD3ED"
    FontSize="13"
    mc:Ignorable="d">
    <StackPanel
        Width="400"
        VerticalAlignment="Center"
        Background="#FF47566B">
        <Label
            x:Name="LblTitle"
            Margin="5,5,5,0"
            Content="Working... PLease wait"
            Foreground="White" />
        <ProgressBar
            x:Name="ProgressMain"
            Height="25"
            Margin="10,10,10,20"
            ForceCursor="False"
            IsIndeterminate="True"
            Template="{StaticResource ProgressBarTemplate}"
            Value="{Binding ProgressMain}" />
        <Button
            x:Name="BtnCancelProgress"
            Height="25"
            Margin="10,0,10,15"
            Click="BtnCancelProgress_Click"
            Content="Cancel" />
    </StackPanel>
</UserControl>
